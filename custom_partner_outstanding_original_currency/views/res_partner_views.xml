<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_statement_email_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.statement.email.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="statement_email" placeholder="correo@cliente.com"/>
                <field name="statement_email_cc" placeholder="cc@cliente.com"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_open_statement_report"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-money"
                    string="Adeudado"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_send_statement_wizard"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-envelope"
                    string="Enviar estado de cuenta"
                    invisible="not customer_rank"
                />
            </xpath>
        </field>
    </record>
</odoo>
