<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_statement_send_wizard_form" model="ir.ui.view">
        <field name="name">statement.send.wizard.form</field>
        <field name="model">statement.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Enviar estado de cuenta">
                <group>
                    <field name="partner_id" readonly="1"/>
                    <field name="email_to"/>
                    <field name="email_cc"/>
                    <field name="subject"/>
                    <field name="body" widget="html"/>
                </group>
                <footer>
                    <button name="action_send_statement" type="object" string="Enviar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_statement_send_wizard" model="ir.actions.act_window">
        <field name="name">Enviar estado de cuenta</field>
        <field name="res_model">statement.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_statement_send_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
