<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_customer_due_statement" model="ir.ui.view">
        <field name="name">res.partner.form.customer.due.statement</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_customer_due_statement"
                        type="object"
                        string="Adeudado"
                        class="oe_highlight"
                        attrs="{'invisible': [('customer_rank', '=', 0)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
