<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_due_statement_wizard_form" model="ir.ui.view">
        <field name="name">customer.due.statement.wizard.form</field>
        <field name="model">customer.due.statement.wizard</field>
        <field name="arch" type="xml">
            <form string="Adeudado del cliente">
                <group>
                    <field name="company_id"/>
                    <field name="partner_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Imprimir" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
